<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSCars.Page.Prova"
             Title="Prova">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Cadastro de Usuário"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry Placeholder="CPF" 
                   Keyboard="Numeric" />

            <Entry Placeholder="Nome Completo" />

            <Label Text="Data de Nascimento" />
            <DatePicker Format="dd/MM/yyyy" />

            <Entry Placeholder="E-mail" Keyboard="Email" />
            
            <Entry Placeholder="Número de Telefone" />

            <Button Text="Cadastrar"
                    BackgroundColor="Blue"
                    TextColor="White"
                    CornerRadius="10" />

            <Button Text="Voltar"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="btnVoltarClicked" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

