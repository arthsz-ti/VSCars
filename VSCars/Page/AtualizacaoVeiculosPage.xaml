<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSCars.Page.AtualizacaoVeiculosPage"
             Title="Atualizar Veículo">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Atualização do Veículo"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center"/>

        <Label Text="ID do Veículo:"/>
        <Entry x:Name="txtIDVeiculo" 
               Placeholder="ID do veículo" 
               Keyboard="Numeric"/>

        <Label Text="Ano de Fabricação:"/>
        <Entry x:Name="txtAnoFabricacao" 
               Placeholder="Ex: 2022" 
               Keyboard="Numeric"/>

        <Label Text="Nome do Veículo:"/>
        <Entry x:Name="txtNomeVeiculo" 
               Placeholder="Digite o nome do veículo"/>

        <Label Text="Modelo:"/>
        <Entry x:Name="txtModelo"
               Placeholder="Digite o modelo do veículo"/>

        <Button Text="Salvar Alteração"
          Clicked="btnAtualizar_Clicked"
             BackgroundColor="Green"
            TextColor="White"
          FontAttributes="Bold"
          CornerRadius="10"
            HorizontalOptions="Fill"/>


        <Button Text="Cancelar"
                Clicked="btnCancelar_Clicked"
                BackgroundColor="Red"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Fill"/>
    </VerticalStackLayout>
</ContentPage>
