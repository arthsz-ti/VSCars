<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSCars.Page.AtualizacaoMarcasPage"
             Title="Atualizar Marca">
    <VerticalStackLayout Spacing="15" Padding="20">

        <Label Text="Atualização de Marca"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center"/>

        <Label Text="ID da Marca:"/>
        <Entry x:Name="txtIDMarca" 
               Placeholder="ID da Marcas"
               Keyboard="Numeric"/>

        <Label Text="Nome da Marca:"/>
        <Entry x:Name="txtNomeMarca"
               Placeholder="Nome da Marca"/>

        <Label Text="Observação:"/>
        <Editor x:Name="txtObservacao"
                Placeholder="Digite uma observação"
                AutoSize="TextChanges"/>

        <Button x:Name="btnAtualizar"
                Text="Atualizar Marca"
                Clicked="btnAtualizar_Clicked"
                BackgroundColor="Orange"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Fill"/>

        <Button x:Name="btnCancelar"
                Text="Cancelar"
                Clicked="btnCancelar_Clicked"
                BackgroundColor="Red"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Fill"/>
    </VerticalStackLayout>
</ContentPage>